<div class="table-responsive">
    <style>
        table {
            counter-reset: rowNumber-1;
        }

        table tr {
            counter-increment: rowNumber;
        }

        table tr td:first-child::before {
            content: counter(rowNumber);
            min-width: 1em;
            margin-right: 0.5em;
        }
    </style>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">S.No.</th>
                <th scope="col">Application ID</th>
                <th scope="col">Types</th>
                <th>Actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>


            {{!-- for superAdmin --}}
            {{#if isSuperAdmin}}
            {{#each citizenships}}
            <tr>
                <td></td>
                {{!-- ya nira td vitra {{type}} garera rakhda ramro huntheo rather than 'citizenship' --}}
                <td>32424324</td>
                <td>citizenship</td>

                <td><a href="/admin/requests/view/{{_id}}"><button class="btn btn-info">View</button></a></td>
                <td>
                    <form action="/admin/requests/approve/{{_id}}?_method=PATCH" method="POST">
                        {{#if isApproved}}
                        <button class="btn btn-success">UnApprove</button>
                        {{else }}
                        <button class="btn btn-warning">Approve</button>
                        {{/if}}
                    </form>
                </td>
                <td>
                    <form action="/admin/requests/{{_id}}?_method=DELETE" method="POST">
                        <button class="btn btn-danger" type="submit" onclick="return confirmation()">Discard</button>
                    </form>
                </td>
            </tr>
            {{/each}}
            {{/if}}
            {{#if isAdmin}}
            {{#each citizenships}}
            <tr>
                <td></td>
                {{!-- ya nira td vitra {{type}} garera rakhda ramro huntheo rather than 'citizenship' --}}
                <td>32424324</td>
                <td>citizenship</td>

                <td><a href="#"><button class="btn btn-info">View</button></a></td>

                <td>
                    <form action="/admin/requests/call/{{_id}}?_method=PATCH" method="POST">
                        {{#if isCalled}}
                        <button class="btn btn-success">Called</button>
                        {{else}}
                        <button class="btn btn-warning">Call for Verification</button>
                        {{/if}}
                    </form>
                </td>
                <td>
                    <form action="/admin/requests/verify/{{_id}}?_method=PATCH" method="POST">
                        {{#if isVerified}}
                        <button class="btn btn-success">Unverify</button>
                        {{else }}
                        <button class="btn btn-warning">Verify</button>
                        {{/if}}
                    </form>
                </td>
                <td>
                    <form action="/admin/requests/{{_id}}?_method=DELETE" method="POST">
                        <button class="btn btn-danger" type="submit" onclick="return confirmation()">Discard</button>
                    </form>
                </td>
            </tr>
            {{/each}}
            {{/if}}

        </tbody>
    </table>
</div>

<script>
    function confirmation() {
        return confirm("Are you sure");
    }
</script>